<%= render "spree/admin/shared/order_tabs", current: :internal_note %>

<div data-hook="admin_order_edit_header">
  <%= render "spree/admin/shared/error_messages", target: @order %>
</div>

<div data-hook="internal-note-form-container">
  <%= form_for [:admin, @order], method: :put, url: set_internal_note_admin_order_path do |f| %>
    <fieldset>
      <div data-hook="admin_order_internal_note_field">
        <%= f.field_container :internal_note do %>
          <%= f.label :internal_note, Spree.t('admin.notes') %>
          <%= f.text_area :internal_note, { rows: 5 , name: "internal_note", class: "form-control" } %>
          <%= f.error_message_on :internal_note %>
        <% end %>
      </div>
      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t("actions.update"), "recycle.svg", "submit", { class: "btn-success", data: { disable_with: "#{ Spree.t(:saving) }..." }} %>
      </div>
    <fieldset>
  <% end %>
</div>

<%= render 'spree/admin/shared/order_summary' %>
