<div>
  <%= form_for(:digital, url: admin_product_digitals_path(@product), method: :create, multipart: true ) do |f| %>
    <fieldset>
      <legend class='h4 pl-0 <%= variant.digital? ? "mb-0" : "mb-3" %>'><%= Spree::Variant.model_name.human %> "<%= variant.is_master ? "Master" : variant.options_text %>"</legend>
      <% if variant.digital? %>
        <table class="table">
          <thead>
            <tr>
              <th><%= Spree.t(:file_name, scope: "spree_digital") %></th>
              <th class="actions"></th>
            </tr>
          </thead>
          <tbody>
            <% variant.digitals.each do |digital| %>
              <tr>
                <td>
                  <%= digital.attachment.filename %>
                  (<%= number_to_human_size(digital.attachment.byte_size) %>)
                  <%= digital.attachment.content_type %>
                </td>
                <td class="actions text-right">
                  <%= link_to_with_icon 'delete.svg', Spree.t(:delete_file, scope: 'digitals'), admin_product_digital_url(@product, digital), data: { confirm: Spree.t(:delete_file_confirmation, scope: 'digitals', filename: digital.attachment.filename) }, method: :delete, class: 'btn btn-danger btn-sm delete-resource' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

      <div class="form-group">
        <%= f.label :file, Spree.t(:add_new_file, scope: 'digitals') %> <span class="required">*</span><br>
        <%= f.file_field :attachment %>
        <%= hidden_field_tag 'digital[variant_id]', variant.id %>
        <%= button Spree.t(:upload, scope: "spree_digital"), 'add.svg', 'submit', { class: 'btn btn-primary' } %>
      </div>
    </fieldset>
  <% end %>
</div>
